-- K√©o th·∫£ menu
local dragging, dragStart, startPos

espMenu.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragging = true
        dragStart = input.Position
        startPos = espMenu.Position
    end
end)

espMenu.InputChanged:Connect(function(input)
    if dragging and input.UserInputType == Enum.UserInputType.MouseMovement then
        local delta = input.Position - dragStart
        espMenu.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
    end
end)

userInputService.InputEnded:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragging = false
    end
end)

-- Ch·ª©c nƒÉng ESP
local function createESP(obj)
    if obj:IsA("Model") then
        -- Vi·ªÅn ESP
        local highlight = Instance.new("Highlight")
        highlight.Adornee = obj
        highlight.FillColor = Color3.new(1, 0, 0) -- M√†u ƒë·ªè
        highlight.OutlineColor = Color3.new(1, 0, 0) -- Vi·ªÅn Red
        highlight.FillTransparency = 1
        highlight.OutlineTransparency = 0
        highlight.Parent = obj
        
        -- T√™n ƒë·ªëi t∆∞·ª£ng
        local billboardGui = Instance.new("BillboardGui")
        billboardGui.Adornee = obj
        billboardGui.Size = UDim2.new(0, 100, 0, 50)
        billboardGui.StudsOffset = Vector3.new(0, 3, 0)
        billboardGui.AlwaysOnTop = true
        billboardGui.Parent = obj

        local textLabel = Instance.new("TextLabel")
        textLabel.Size = UDim2.new(1, 0, 1, 0)
        textLabel.BackgroundTransparency = 1
        textLabel.TextColor3 = Color3.new(1, 0, 0) -- Red
        textLabel.TextSize = 16
        textLabel.Font = Enum.Font.SourceSansBold
        textLabel.Text = obj.Name
        textLabel.Parent = billboardGui

        table.insert(espObjects, highlight)
        table.insert(espObjects, billboardGui)
    end
end

-- T√¨m t·∫•t c·∫£ c√°c ƒë·ªëi t∆∞·ª£ng c·∫ßn ESP
local function findAndESP()
    local folders = {
        game.Workspace:FindFirstChild("RuntimeEntities"),
        game.Workspace:FindFirstChild("RuntimeEnemies"),
        game.Workspace:FindFirstChild("NightEnemies"),
        game.Workspace:FindFirstChild("Animals")
    }

    -- ESP cho c√°c th∆∞ m·ª•c ƒë∆∞·ª£c ch·ªâ ƒë·ªãnh
    for _, folder in pairs(folders) do
        if folder then
            for _, obj in pairs(folder:GetChildren()) do
                createESP(obj)
            end
            folder.ChildAdded:Connect(createESP)
        end
    end
end

local function toggleESP(state)
    if state then
        findAndESP()
    else
        for _, esp in pairs(espObjects) do
            esp:Destroy()
        end
        espObjects = {}
    end
end

-- N√∫t b·∫≠t/t·∫Øt ESP
toggleButton.MouseButton1Click:Connect(function()
    espEnabled = not espEnabled
    toggleButton.Text = espEnabled and "T·∫Øt ESP" or "B·∫≠t ESP"
    toggleButton.BackgroundColor3 = espEnabled and Color3.new(0, 1, 0) or Color3.new(0.5, 0.5, 0.5)
    toggleESP(espEnabled)
end)

-- N√∫t m·ªü menu trong tab Home
espButton.MouseButton1Click:Connect(function()
    menuVisible = not menuVisible
    espMenu.Visible = menuVisible
end)

