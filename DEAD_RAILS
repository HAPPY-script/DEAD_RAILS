--Light
local VisualFrame = sections["Visual"] -- L·∫•y ph·∫ßn ch·ª©a n·ªôi dung c·ªßa tab "Visual"
local lighting = game:GetService("Lighting")

local lightEnabled = false -- Tr·∫°ng th√°i b·∫≠t/t·∫Øt √°nh s√°ng

-- T·∫°o n√∫t Light
local lightButton = Instance.new("TextButton", VisualFrame)
lightButton.Size = UDim2.new(0, 300, 0, 40)
lightButton.Position = UDim2.new(0, 10, 0, 110)
lightButton.Text = "‚òÄLight OFF"
lightButton.BackgroundColor3 = Color3.new(0.3, 0.3, 0.3)
lightButton.TextColor3 = Color3.new(1, 1, 1)

-- Ch·ª©c nƒÉng b·∫≠t/t·∫Øt √°nh s√°ng
local function toggleLight(state)
    if state then
        lighting.Brightness = 3 -- TƒÉng ƒë·ªô s√°ng
        lighting.Ambient = Color3.new(1, 1, 1) -- L√†m s√°ng m√¥i tr∆∞·ªùng
        lighting.OutdoorAmbient = Color3.new(1, 1, 1) -- Gi·∫£m ƒë·ªô t·ªëi b√™n ngo√†i
        lighting.GlobalShadows = false -- T·∫Øt b√≥ng t·ªëi
    else
        lighting.Brightness = 1 -- Tr·∫£ v·ªÅ ƒë·ªô s√°ng ban ƒë·∫ßu
        lighting.Ambient = Color3.new(0.5, 0.5, 0.5)
        lighting.OutdoorAmbient = Color3.new(0.5, 0.5, 0.5)
        lighting.GlobalShadows = true -- B·∫≠t b√≥ng t·ªëi l·∫°i
    end
end

-- N√∫t b·∫≠t/t·∫Øt √°nh s√°ng
lightButton.MouseButton1Click:Connect(function()
    lightEnabled = not lightEnabled
    lightButton.Text = lightEnabled and "‚òÄLight ON" or "‚òÄLight OFF"
    lightButton.BackgroundColor3 = lightEnabled and Color3.new(1, 1, 0.39) or Color3.new(0.3, 0.3, 0.3)
    toggleLight(lightEnabled)
end)

-----------------------------------------------------------------------------------------------
--Player view
local PlayerFrame = sections["Player"] -- L·∫•y ph·∫ßn ch·ª©a n·ªôi dung c·ªßa tab "Player"
local players = game:GetService("Players")
local localPlayer = players.LocalPlayer
local camera = game.Workspace.CurrentCamera

local buttons = {} -- L∆∞u c√°c n√∫t c·ªßa ng∆∞·ªùi ch∆°i
local originalCameraSubject = camera.CameraSubject -- L∆∞u tr·∫°ng th√°i camera ban ƒë·∫ßu
local viewingPlayer = nil -- Ng∆∞·ªùi ch∆°i ƒëang ƒë∆∞·ª£c xem

-- H√†m c·∫≠p nh·∫≠t danh s√°ch ng∆∞·ªùi ch∆°i
local function updatePlayerList()
    -- X√≥a c√°c n√∫t c≈© tr∆∞·ªõc khi t·∫°o m·ªõi
    for _, button in pairs(buttons) do
        button:Destroy()
    end
    buttons = {}

    -- T·∫°o danh s√°ch n√∫t ng∆∞·ªùi ch∆°i
    local yOffset = 10 -- V·ªã tr√≠ y ban ƒë·∫ßu
    for _, player in pairs(players:GetPlayers()) do
        if player ~= localPlayer then -- Kh√¥ng hi·ªÉn th·ªã b·∫£n th√¢n
            local PlayerButton = Instance.new("TextButton", PlayerFrame)
            PlayerButton.Size = UDim2.new(0, 300, 0, 40)
            PlayerButton.Position = UDim2.new(0, 10, 0, yOffset)
            PlayerButton.Text = player.Name
            PlayerButton.BackgroundColor3 = Color3.new(0.2, 0.2, 0.2)
            PlayerButton.TextColor3 = Color3.new(1, 1, 1)

            -- Khi b·∫•m v√†o n√∫t
            PlayerButton.MouseButton1Click:Connect(function()
                if viewingPlayer == player then
                    -- N·∫øu ƒëang xem ng∆∞·ªùi n√†y, quay v·ªÅ b·∫£n th√¢n
                    camera.CameraSubject = localPlayer.Character and localPlayer.Character:FindFirstChild("Humanoid") or camera.CameraSubject
                    viewingPlayer = nil
                else
                    -- Chuy·ªÉn camera qua ng∆∞·ªùi ch∆°i ƒë∆∞·ª£c ch·ªçn
                    if player.Character and player.Character:FindFirstChild("Humanoid") then
                        camera.CameraSubject = player.Character.Humanoid
                        viewingPlayer = player
                    end
                end
            end)

            table.insert(buttons, PlayerButton) -- L∆∞u n√∫t v√†o danh s√°ch
            yOffset = yOffset + 50 -- D·ªãch v·ªã tr√≠ xu·ªëng d√≤ng ti·∫øp theo
        end
    end
end

-- Khi c√≥ ng∆∞·ªùi v√†o ho·∫∑c r·ªùi kh·ªèi server, c·∫≠p nh·∫≠t danh s√°ch
players.PlayerAdded:Connect(updatePlayerList)
players.PlayerRemoving:Connect(updatePlayerList)

-- C·∫≠p nh·∫≠t danh s√°ch ban ƒë·∫ßu khi script ch·∫°y
updatePlayerList()

